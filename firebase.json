{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/adsInfo.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, max-age=0"
          }
        ]
      },
      {
        "source": "**/*.mp4",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-transform, public, max-age=31536000"
          },
          {
            "key": "Content-Type",
            "value": "video/mp4"
          },
          {
            "key": "Content-Encoding",
            "value": "identity"
          }
        ]
      }
    ]
  }
}
